@rendermode InteractiveServer
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Interfaces
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Hosting
@inject IExpenseService ExpenseService
@inject IExpenseCategoryService CategoryService
@inject ICurrentUserService CurrentUser
@inject IUserPreferenceService UserPrefs
@inject ISnackbar Snackbar
@inject IJSRuntime JS
@inject IWebHostEnvironment Env

<MudDialog>
    <DialogContent>
        <MudSelect T="int" @bind-Value="_branchId" Label="Branch" Required="true"
                   RequiredError="Branch is required" Placeholder="-- Select Branch --" Class="mb-3">
            @foreach (var b in Branches)
            {
                <MudSelectItem T="int" Value="@b.Id">@b.Name</MudSelectItem>
            }
        </MudSelect>
        <MudTextField @bind-Value="_description" Label="Description" Required="true"
                      RequiredError="Description is required" Lines="2" Class="mb-3" />
        <MudSelect T="int" @bind-Value="_categoryId" Label="Category" Required="true"
                   RequiredError="Category is required" Placeholder="-- Select Category --" Class="mb-3">
            @foreach (var cat in _categories)
            {
                <MudSelectItem T="int" Value="@cat.Id">@cat.Name</MudSelectItem>
            }
        </MudSelect>
        <div @ref="_amountRef">
            <MudTextField T="string" Value="@_amountDisplay" ValueChanged="OnAmountDisplayChanged"
                          Label="Amount"
                          Required="true" RequiredError="Amount is required" Class="mb-3" />
        </div>
        <MudTextField @bind-Value="_receiptNumber" Label="Receipt Number (Optional)" Class="mb-3" />
        <MudFileUpload T="IBrowserFile" Accept=".pdf,.jpg,.jpeg,.png" MaximumFileCount="1"
                       FilesChanged="@(f => _receiptFile = f)">
            <ActivatorContent>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.Receipt" Class="mb-1">
                    Upload Receipt (Optional)
                </MudButton>
            </ActivatorContent>
        </MudFileUpload>
        @if (_receiptFile is not null)
        {
            <MudText Typo="Typo.caption" Color="Color.Success">@_receiptFile.Name (@($"{_receiptFile.Size / 1024.0:F0} KB"))</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit"
                   Disabled="@_saving">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public List<BranchDto> Branches { get; set; } = new();

    private bool _saving;
    private int _branchId;
    private string _description = string.Empty;
    private int _categoryId;
    private List<ExpenseCategoryDto> _categories = new();
    private decimal _amount;
    private string _amountDisplay = "";
    private string? _receiptNumber;
    private IBrowserFile? _receiptFile;
    private ElementReference _amountRef;

    protected override async Task OnInitializedAsync()
    {
        _categories = (await CategoryService.GetActiveAsync()).ToList();
        if (_categories.Any())
            _categoryId = _categories.First().Id;

        var userId = CurrentUser.UserId;
        if (userId is not null)
        {
            var lastBranchId = await UserPrefs.GetIntAsync(userId, IUserPreferenceService.LastBranchId);
            if (lastBranchId.HasValue && Branches.Any(b => b.Id == lastBranchId.Value))
                _branchId = lastBranchId.Value;
        }

        if (_branchId == 0)
        {
            var defaultBranch = Branches.FirstOrDefault(b => b.IsDefault);
            if (defaultBranch is not null)
                _branchId = defaultBranch.Id;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initNumericFormat", _amountRef);
        }
    }

    private void OnAmountDisplayChanged(string value)
    {
        _amountDisplay = FormatNumber(value);
        _amount = ParseNumber(value);
    }

    private async Task Submit()
    {
        var raw = await JS.InvokeAsync<string>("getNumericInputValue", _amountRef);
        _amount = ParseNumber(raw);

        if (_branchId == 0 || string.IsNullOrWhiteSpace(_description) || _categoryId == 0 || _amount <= 0)
        {
            Snackbar.Add("Please fill in all required fields", Severity.Warning);
            return;
        }

        _saving = true;
        try
        {
            string? receiptImagePath = null;
            if (_receiptFile is not null)
            {
                var uploadsDir = Path.Combine(Env.WebRootPath, "uploads", "receipts");
                Directory.CreateDirectory(uploadsDir);
                var ext = Path.GetExtension(_receiptFile.Name);
                var fileName = $"{Guid.NewGuid()}{ext}";
                var filePath = Path.Combine(uploadsDir, fileName);
                await using var stream = new FileStream(filePath, FileMode.Create);
                await _receiptFile.OpenReadStream(5 * 1024 * 1024).CopyToAsync(stream);
                receiptImagePath = $"/uploads/receipts/{fileName}";
            }

            var result = await ExpenseService.CreateExpenseAsync(
                new CreateExpenseRequest(_branchId, _description, _categoryId, _amount, _receiptNumber, receiptImagePath),
                CurrentUser.UserId ?? "");

            var userId = CurrentUser.UserId;
            if (userId is not null)
                await UserPrefs.SetAsync(userId, IUserPreferenceService.LastBranchId, _branchId.ToString());

            var message = result.Status == DepositStatus.Approved
                ? "Expense recorded and auto-approved"
                : "Expense submitted for approval";
            Snackbar.Add(message, Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private static string FormatNumber(string input)
    {
        if (string.IsNullOrEmpty(input)) return "";
        var clean = "";
        var hasDecimal = false;
        foreach (var c in input)
        {
            if (char.IsDigit(c)) clean += c;
            else if (c == '.' && !hasDecimal) { clean += c; hasDecimal = true; }
        }
        if (string.IsNullOrEmpty(clean)) return "";
        var parts = clean.Split('.');
        if (long.TryParse(parts[0], out var intPart))
            parts[0] = intPart.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"));
        return parts.Length > 1 ? $"{parts[0]}.{parts[1]}" : parts[0];
    }

    private static decimal ParseNumber(string formatted)
    {
        var clean = new string(formatted.Where(c => char.IsDigit(c) || c == '.').ToArray());
        return decimal.TryParse(clean, System.Globalization.NumberStyles.Any,
            System.Globalization.CultureInfo.InvariantCulture, out var val) ? val : 0;
    }
}
