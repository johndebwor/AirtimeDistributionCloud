@page "/superadmin/users"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.Services
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject IBranchService BranchService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Users_Title") ?? "User Management") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Users_Title") ?? "User Management")</h1>
    <p>@(Lang?.T("Users_Subtitle") ?? "Manage system users and roles")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Users_Search") ?? "Search users...")" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.PersonAdd"
               OnClick="OpenCreateDialog">@(Lang?.T("Users_Add") ?? "Add User")</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="UserView" Items="@_filteredUsers" Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 Filterable="false" SortMode="SortMode.Multiple">
        <Columns>
            <PropertyColumn Property="x => x.FullName" Title="@(Lang?.T("FullName") ?? "Full Name")" />
            <PropertyColumn Property="x => x.Email" Title="@(Lang?.T("Email") ?? "Email")" />
            <PropertyColumn Property="x => x.BranchName" Title="@(Lang?.T("Branch") ?? "Branch")" />
            <TemplateColumn Title="@(Lang?.T("Roles") ?? "Roles")" Sortable="false">
                <CellTemplate>
                    @foreach (var role in context.Item.Roles)
                    {
                        <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined" Class="mr-1">@role</MudChip>
                    }
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.EmailConfirmed ? Color.Success : Color.Warning)" Size="Size.Small">
                        @(context.Item.EmailConfirmed ? (Lang?.T("Confirmed") ?? "Confirmed") : (Lang?.T("Pending") ?? "Pending"))
                    </MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="@(Lang?.T("Created") ?? "Created")" Format="dd MMM yyyy" />
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context.Item))" />
                    <MudTooltip Text="@(Lang?.T("Users_ResetPassword") ?? "Reset Password")" Placement="Placement.Top">
                        <MudIconButton Icon="@Icons.Material.Filled.LockReset" Size="Size.Small" Color="Color.Warning"
                                       OnClick="@(() => ResetPassword(context.Item))" />
                    </MudTooltip>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Users_NotFound") ?? "No users found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<UserView> _users = new();
    private string _searchString = "";
    private bool _loading = true;

    private IEnumerable<UserView> _filteredUsers =>
        string.IsNullOrWhiteSpace(_searchString)
            ? _users
            : _users.Where(u =>
                u.FullName.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
                u.Email.Contains(_searchString, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _loading = true;
        try
        {
            var branches = (await BranchService.GetAllBranchesAsync()).ToDictionary(b => b.Id, b => b.Name);
            var users = UserManager.Users.ToList();
            var userViews = new List<UserView>();

            foreach (var user in users)
            {
                var roles = await UserManager.GetRolesAsync(user);
                userViews.Add(new UserView
                {
                    Id = user.Id,
                    FullName = user.FullName,
                    Email = user.Email ?? "",
                    BranchId = user.BranchId,
                    BranchName = user.BranchId.HasValue ? branches.GetValueOrDefault(user.BranchId.Value, "Unknown") : "-",
                    Roles = roles.ToList(),
                    EmailConfirmed = user.EmailConfirmed,
                    CreatedDate = user.CreatedDate
                });
            }
            _users = userViews;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading users"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OpenCreateDialog()
    {
        var roles = RoleManager.Roles.Select(r => r.Name!).ToList();
        var branches = (await BranchService.GetAllBranchesAsync()).Where(b => b.IsActive).ToList();

        var parameters = new DialogParameters<UserDialog>
        {
            { x => x.IsEdit, false },
            { x => x.AvailableRoles, roles },
            { x => x.Branches, branches }
        };
        var dialog = await DialogService.ShowAsync<UserDialog>(Lang?.T("Users_Add") ?? "Add User", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadUsers();
    }

    private async Task OpenEditDialog(UserView user)
    {
        var roles = RoleManager.Roles.Select(r => r.Name!).ToList();
        var branches = (await BranchService.GetAllBranchesAsync()).Where(b => b.IsActive).ToList();

        var parameters = new DialogParameters<UserDialog>
        {
            { x => x.IsEdit, true },
            { x => x.AvailableRoles, roles },
            { x => x.Branches, branches },
            { x => x.Model, new UserDialog.UserModel
                {
                    Id = user.Id, FullName = user.FullName, Email = user.Email,
                    BranchId = user.BranchId, SelectedRoles = user.Roles
                }
            }
        };
        var dialog = await DialogService.ShowAsync<UserDialog>(Lang?.T("Edit") ?? "Edit User", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadUsers();
    }

    private async Task ResetPassword(UserView userView)
    {
        var confirm = await DialogService.ShowMessageBox(
            Lang?.T("Users_ResetPassword") ?? "Reset Password",
            (MarkupString)$"{Lang?.T("Users_ResetPasswordConfirm") ?? "Are you sure you want to reset the password for"} <strong>{userView.FullName}</strong>?",
            yesText: Lang?.T("Reset") ?? "Reset",
            cancelText: Lang?.T("Cancel") ?? "Cancel");

        if (confirm != true) return;

        try
        {
            var user = await UserManager.FindByIdAsync(userView.Id);
            if (user == null)
            {
                Snackbar.Add(Lang?.T("Users_NotFoundUser") ?? "User not found", Severity.Error);
                return;
            }

            var token = await UserManager.GeneratePasswordResetTokenAsync(user);
            var result = await UserManager.ResetPasswordAsync(user, token, UserDialog.DefaultPassword);

            if (result.Succeeded)
            {
                Snackbar.Add($"{Lang?.T("Users_PasswordReset") ?? "Password reset to"}: {UserDialog.DefaultPassword}", Severity.Success);
            }
            else
            {
                Snackbar.Add(string.Join(", ", result.Errors.Select(e => e.Description)), Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
        }
    }

    public class UserView
    {
        public string Id { get; set; } = "";
        public string FullName { get; set; } = "";
        public string Email { get; set; } = "";
        public int? BranchId { get; set; }
        public string BranchName { get; set; } = "";
        public List<string> Roles { get; set; } = new();
        public bool EmailConfirmed { get; set; }
        public DateTime CreatedDate { get; set; }
    }
}
