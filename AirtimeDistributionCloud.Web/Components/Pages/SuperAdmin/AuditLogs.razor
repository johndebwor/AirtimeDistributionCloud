@page "/superadmin/audit"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using System.Text.Json
@inject IAuditLogService AuditLogService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("AuditLogs_Title") ?? "Audit Logs") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("AuditLogs_Title") ?? "Audit Logs")</h1>
    <p>@(Lang?.T("AuditLogs_Subtitle") ?? "View system activity and changes")</p>
</div>

<MudPaper Elevation="0" Class="data-card pa-4 mb-4">
    <MudGrid>
        <MudItem xs="12" sm="3">
            <MudSelect T="string" @bind-Value="_selectedEntity" Label="@(Lang?.T("AuditLogs_EntityType") ?? "Entity Type")" Clearable="true"
                       Variant="Variant.Outlined" Dense="true">
                <MudSelectItem T="string" Value="@("AirtimeDeposit")">@(Lang?.T("AuditEntity_AirtimeDeposit") ?? "Airtime Deposit")</MudSelectItem>
                <MudSelectItem T="string" Value="@("AirtimeTransfer")">@(Lang?.T("AuditEntity_AirtimeTransfer") ?? "Airtime Transfer")</MudSelectItem>
                <MudSelectItem T="string" Value="@("CashDeposit")">@(Lang?.T("AuditEntity_CashDeposit") ?? "Cash Deposit")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Product")">@(Lang?.T("AuditEntity_Product") ?? "Product")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Dealer")">@(Lang?.T("AuditEntity_Dealer") ?? "Dealer")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Branch")">@(Lang?.T("AuditEntity_Branch") ?? "Branch")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Expense")">@(Lang?.T("AuditEntity_Expense") ?? "Expense")</MudSelectItem>
                <MudSelectItem T="string" Value="@("DealerProduct")">@(Lang?.T("AuditEntity_DealerProduct") ?? "Dealer Product")</MudSelectItem>
                <MudSelectItem T="string" Value="@("ApplicationUser")">@(Lang?.T("AuditEntity_ApplicationUser") ?? "Application User")</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="3">
            <MudSelect T="string" @bind-Value="_selectedAction" Label="@(Lang?.T("AuditLogs_Action") ?? "Action")" Clearable="true"
                       Variant="Variant.Outlined" Dense="true">
                <MudSelectItem T="string" Value="@("Create")">@(Lang?.T("AuditAction_Create") ?? "Create")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Update")">@(Lang?.T("AuditAction_Update") ?? "Update")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Delete")">@(Lang?.T("AuditAction_Delete") ?? "Delete")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Approve")">@(Lang?.T("AuditAction_Approve") ?? "Approve")</MudSelectItem>
                <MudSelectItem T="string" Value="@("Reject")">@(Lang?.T("AuditAction_Reject") ?? "Reject")</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="3">
            <MudDateRangePicker @bind-DateRange="_dateRange" Label="@(Lang?.T("AuditLogs_DateRange") ?? "Date Range")" Clearable="true"
                                Variant="Variant.Outlined" Margin="Margin.Dense" />
        </MudItem>
        <MudItem xs="12" sm="3" Class="d-flex align-end gap-2">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.FilterAlt"
                       OnClick="ApplyFilters">@(Lang?.T("AuditLogs_ApplyFilters") ?? "Apply Filters")</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Default" StartIcon="@Icons.Material.Filled.Clear"
                       OnClick="ClearFilters">@(Lang?.T("AuditLogs_Clear") ?? "Clear")</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AuditLogDto" Items="@_logs" Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 Filterable="false" SortMode="SortMode.Multiple" QuickFilter="@_quickFilter">
        <ToolBarContent>
            <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("AuditLogs_Search") ?? "Search logs...")" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                          Immediate="true" Style="max-width: 300px;" />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.EntityName" Title="@(Lang?.T("AuditLogs_Entity") ?? "Entity")" />
            <PropertyColumn Property="x => x.EntityId" Title="ID" />
            <TemplateColumn Title="@(Lang?.T("AuditLogs_Action") ?? "Action")" Sortable="false">
                <CellTemplate>
                    @{
                        var actionColor = context.Item.Action switch
                        {
                            "Create" => Color.Success,
                            "Update" => Color.Info,
                            "Delete" => Color.Error,
                            "Approve" => Color.Success,
                            "Reject" => Color.Warning,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@actionColor" Size="Size.Small">@context.Item.Action</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.UserName" Title="@(Lang?.T("User") ?? "User")" />
            <PropertyColumn Property="x => x.Timestamp" Title="@(Lang?.T("Date") ?? "Date")" Format="dd MMM yyyy HH:mm" />
            <TemplateColumn Title="@(Lang?.T("Details") ?? "Details")" Sortable="false">
                <CellTemplate>
                    @if (!string.IsNullOrEmpty(context.Item.OldValues) || !string.IsNullOrEmpty(context.Item.NewValues))
                    {
                        <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Color="Color.Primary"
                                       OnClick="@(() => ShowDetails(context.Item))" />
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("AuditLogs_NotFound") ?? "No audit logs found.")</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        </LoadingContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<AuditLogDto> _logs = new();
    private string? _selectedEntity;
    private string? _selectedAction;
    private DateRange? _dateRange;
    private string _searchString = "";
    private bool _loading;

    private Func<AuditLogDto, bool> _quickFilter => log =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (log.EntityName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (log.EntityId.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (log.Action.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (!string.IsNullOrEmpty(log.UserName) && log.UserName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadAllLogs();
    }

    private async Task LoadAllLogs()
    {
        _loading = true;
        try
        {
            _logs = (await AuditLogService.GetFilteredLogsAsync(null, null, null, null, null)).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading audit logs"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task ApplyFilters()
    {
        _loading = true;
        try
        {
            var from = _dateRange?.Start;
            var to = _dateRange?.End?.AddDays(1).AddTicks(-1);
            _logs = (await AuditLogService.GetFilteredLogsAsync(_selectedEntity, _selectedAction, from, to, null)).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading audit logs"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task ClearFilters()
    {
        _selectedEntity = null;
        _selectedAction = null;
        _dateRange = null;
        _searchString = "";
        await LoadAllLogs();
    }

    private async Task ShowDetails(AuditLogDto log)
    {
        var oldJson = FormatJson(log.OldValues);
        var newJson = FormatJson(log.NewValues);

        var parameters = new DialogParameters<AuditLogDetailDialog>
        {
            { x => x.EntityName, log.EntityName },
            { x => x.EntityId, log.EntityId },
            { x => x.Action, log.Action },
            { x => x.OldValues, oldJson },
            { x => x.NewValues, newJson }
        };

        await DialogService.ShowAsync<AuditLogDetailDialog>(Lang?.T("Details") ?? "Audit Log Details", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
    }

    private static string FormatJson(string? json)
    {
        if (string.IsNullOrWhiteSpace(json))
            return "(none)";

        try
        {
            var doc = JsonDocument.Parse(json);
            return JsonSerializer.Serialize(doc, new JsonSerializerOptions { WriteIndented = true });
        }
        catch
        {
            return json;
        }
    }
}
