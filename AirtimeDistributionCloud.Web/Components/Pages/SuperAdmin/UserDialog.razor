@rendermode InteractiveServer
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Model.FullName" Label="@(Lang?.T("FullName") ?? "Full Name")" Required="true"
                      RequiredError="@(Lang?.T("NameRequired") ?? "Full name is required")" Class="mb-3" />
        <MudTextField @bind-Value="Model.Email" Label="@(Lang?.T("Email") ?? "Email")" Required="true"
                      RequiredError="@(Lang?.T("EmailRequired") ?? "Email is required")" InputType="InputType.Email" Class="mb-3" />
        <MudSelect T="int?" @bind-Value="Model.BranchId" Label="@(Lang?.T("Branch") ?? "Branch")" Clearable="true" Class="mb-3">
            @foreach (var b in Branches)
            {
                <MudSelectItem T="int?" Value="@((int?)b.Id)">@b.Name</MudSelectItem>
            }
        </MudSelect>
        <MudSelect T="string" Label="@(Lang?.T("Roles") ?? "Roles")" MultiSelection="true" @bind-SelectedValues="_selectedRolesValues" Class="mb-3">
            @foreach (var role in AvailableRoles)
            {
                <MudSelectItem T="string" Value="@role">@role</MudSelectItem>
            }
        </MudSelect>
        @if (!IsEdit)
        {
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Dense="true" Class="mt-2">
                <MudText Typo="Typo.body2">
                    @(Lang?.T("Users_DefaultPasswordInfo") ?? "Default password:") <strong>@DefaultPassword</strong>
                </MudText>
                <MudText Typo="Typo.caption" Color="Color.Secondary">
                    @(Lang?.T("Users_DefaultPasswordHint") ?? "The user should change this password after first login.")
                </MudText>
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@(Lang?.T("Cancel") ?? "Cancel")</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit"
                   Disabled="@_saving">@(IsEdit ? (Lang?.T("Update") ?? "Update") : (Lang?.T("Save") ?? "Save"))</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }
    [Parameter] public bool IsEdit { get; set; }
    [Parameter] public UserModel Model { get; set; } = new();
    [Parameter] public List<string> AvailableRoles { get; set; } = new();
    [Parameter] public List<BranchDto> Branches { get; set; } = new();

    private bool _saving;
    public const string DefaultPassword = "Pass@1234";

    protected override void OnInitialized()
    {
        if (!IsEdit && Model.BranchId is null)
        {
            var defaultBranch = Branches.FirstOrDefault(b => b.IsDefault);
            if (defaultBranch is not null)
                Model.BranchId = defaultBranch.Id;
        }
    }

    private IEnumerable<string> _selectedRolesValues
    {
        get => Model.SelectedRoles;
        set => Model.SelectedRoles = value.ToList();
    }

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Model.FullName) || string.IsNullOrWhiteSpace(Model.Email))
        {
            Snackbar.Add(Lang?.T("Users_FullNameRequired") ?? "Full name and email are required", Severity.Warning);
            return;
        }

        _saving = true;
        try
        {
            if (IsEdit)
            {
                var user = await UserManager.FindByIdAsync(Model.Id);
                if (user == null)
                {
                    Snackbar.Add(Lang?.T("Users_NotFoundUser") ?? "User not found", Severity.Error);
                    return;
                }

                user.FullName = Model.FullName;
                user.Email = Model.Email;
                user.UserName = Model.Email;
                user.BranchId = Model.BranchId;
                await UserManager.UpdateAsync(user);

                var currentRoles = await UserManager.GetRolesAsync(user);
                await UserManager.RemoveFromRolesAsync(user, currentRoles);
                if (Model.SelectedRoles.Any())
                    await UserManager.AddToRolesAsync(user, Model.SelectedRoles);

                Snackbar.Add(Lang?.T("Users_Updated") ?? "User updated", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var user = new ApplicationUser
                {
                    UserName = Model.Email,
                    Email = Model.Email,
                    FullName = Model.FullName,
                    BranchId = Model.BranchId,
                    EmailConfirmed = true
                };

                var result = await UserManager.CreateAsync(user, DefaultPassword);
                if (result.Succeeded)
                {
                    if (Model.SelectedRoles.Any())
                        await UserManager.AddToRolesAsync(user, Model.SelectedRoles);

                    Snackbar.Add(Lang?.T("Users_Created") ?? "User created", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add(string.Join(", ", result.Errors.Select(e => e.Description)), Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    public class UserModel
    {
        public string Id { get; set; } = "";
        public string FullName { get; set; } = "";
        public string Email { get; set; } = "";
        public int? BranchId { get; set; }
        public List<string> SelectedRoles { get; set; } = new();
    }
}
