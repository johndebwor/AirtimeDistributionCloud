@page "/admin/transfer-approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeTransferService TransferService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("TransferApprovals_Title") ?? "Transfer Approvals") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("TransferApprovals_Title") ?? "Transfer Approvals")</h1>
    <p>@(Lang?.T("TransferApprovals_Subtitle") ?? "Review and approve/reject airtime transfers")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("TransferApprovals_Search") ?? "Search by dealer, product, branch...")"
                  Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                  IconSize="Size.Medium" Class="mt-0" Immediate="true" Style="max-width:300px;" />
    @if (_pendingCount > 0 && _currentFilter == "Pending")
    {
        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small"
                   StartIcon="@Icons.Material.Filled.DoneAll" OnClick="ApproveAll"
                   Disabled="@_approvingAll">
            @(Lang?.T("Approvals_ApproveAll") ?? "Approve All") (@_pendingCount)
        </MudButton>
    }
</div>

<!-- Status Filter Tabs -->
<div class="approval-filter-tabs mb-4">
    @foreach (var (label, value, color, count) in _filterOptions)
    {
        <button class="approval-tab @(_currentFilter == value ? "approval-tab-active" : "")"
                style="@(_currentFilter == value ? $"border-color: var(--mud-palette-{color}); color: var(--mud-palette-{color});" : "")"
                @onclick="@(() => OnFilterChanged(value))">
            @label
            @if (count > 0)
            {
                <span class="approval-tab-badge" style="background: var(--mud-palette-@color);">@count</span>
            }
        </button>
    }
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeTransferDto" Items="@_filteredTransfers" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@_quickFilter">
        <Columns>
            <PropertyColumn Property="x => x.TransferNumber" Title="@(Lang?.T("TransferNumber") ?? "Transfer #")" />
            <PropertyColumn Property="x => x.BranchName" Title="@(Lang?.T("Branch") ?? "Branch")" />
            <PropertyColumn Property="x => x.ProductName" Title="@(Lang?.T("Product") ?? "Product")" />
            <PropertyColumn Property="x => x.DealerName" Title="@(Lang?.T("Dealer") ?? "Dealer")" />
            <PropertyColumn Property="x => x.Amount" Title="@(Lang?.T("Amount") ?? "Amount")" Format="C6" />
            <TemplateColumn Title="@(Lang?.T("TransferApprovals_TransferType") ?? "Transfer Type")" Sortable="false">
                <CellTemplate>
                    @{
                        var typeColor = context.Item.TransferType switch
                        {
                            TransferType.Airtime => Color.Warning,
                            TransferType.Cash => Color.Success,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@typeColor" Size="Size.Small">@context.Item.TransferType</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            DepositStatus.Cancelled => Color.Dark,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="@(Lang?.T("Date") ?? "Date")" Format="dd MMM yyyy HH:mm" />
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    <div class="d-flex gap-1">
                        @if (context.Item.Status == DepositStatus.Pending)
                        {
                            <MudTooltip Text="@(Lang?.T("Approve") ?? "Approve")">
                                <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success"
                                              Size="Size.Small"
                                              OnClick="@(() => ApproveTransfer(context.Item))" />
                            </MudTooltip>
                            <MudTooltip Text="@(Lang?.T("Reject") ?? "Reject")">
                                <MudIconButton Icon="@Icons.Material.Filled.Cancel" Color="Color.Error"
                                              Size="Size.Small"
                                              OnClick="@(() => RejectTransfer(context.Item))" />
                            </MudTooltip>
                        }
                        @if (context.Item.Status == DepositStatus.Approved)
                        {
                            <MudTooltip Text="@(Lang?.T("Cancel") ?? "Cancel")">
                                <MudIconButton Icon="@Icons.Material.Filled.Block" Color="Color.Dark"
                                              Size="Size.Small"
                                              OnClick="@(() => CancelTransfer(context.Item))" />
                            </MudTooltip>
                        }
                    </div>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Transfers_NotFound") ?? "No transfers found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<AirtimeTransferDto> _allTransfers = new();
    private List<AirtimeTransferDto> _filteredTransfers = new();
    private string _currentFilter = "Pending";
    private string _searchString = "";
    private bool _loading = true;
    private bool _approvingAll;
    private int _pendingCount => _allTransfers.Count(t => t.Status == DepositStatus.Pending);

    private IEnumerable<(string Label, string Value, string Color, int Count)> _filterOptions =>
    [
        (Lang?.T("Pending") ?? "Pending",   "Pending",   "warning", _allTransfers.Count(t => t.Status == DepositStatus.Pending)),
        (Lang?.T("Approved") ?? "Approved", "Approved",  "success", _allTransfers.Count(t => t.Status == DepositStatus.Approved)),
        (Lang?.T("Rejected") ?? "Rejected", "Rejected",  "error",   _allTransfers.Count(t => t.Status == DepositStatus.Rejected)),
        (Lang?.T("Cancelled") ?? "Cancelled","Cancelled","dark",    _allTransfers.Count(t => t.Status == DepositStatus.Cancelled)),
        (Lang?.T("All") ?? "All",           "All",       "primary", _allTransfers.Count),
    ];

    private Func<AirtimeTransferDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.DealerName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.ProductName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.BranchName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadTransfers();
    }

    private async Task LoadTransfers()
    {
        _loading = true;
        try
        {
            _allTransfers = (await TransferService.GetAllTransfersAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading"} {Lang?.T("TransferApprovals_Title")?.ToLower() ?? "transfers"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(string value)
    {
        _currentFilter = value ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredTransfers = _currentFilter switch
        {
            "Pending" => _allTransfers.Where(t => t.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allTransfers.Where(t => t.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allTransfers.Where(t => t.Status == DepositStatus.Rejected).ToList(),
            "Cancelled" => _allTransfers.Where(t => t.Status == DepositStatus.Cancelled).ToList(),
            _ => _allTransfers.ToList()
        };
    }

    private async Task ApproveTransfer(AirtimeTransferDto transfer)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("TransferApprovals_ApproveTransfer") ?? "Approve Transfer"} #{transfer.Id}" },
            { x => x.ActionLabel, Lang?.T("Approve") ?? "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("TransferApprovals_ApproveTransfer") ?? "Approve Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                var (_, notification) = await TransferService.ApproveTransferAsync(transfer.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("TransferApprovals_Approved") ?? "Transfer approved successfully", Severity.Success);
                await LoadTransfers();
                await HandleNotification(notification);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectTransfer(AirtimeTransferDto transfer)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("TransferApprovals_RejectTransfer") ?? "Reject Transfer"} #{transfer.Id}" },
            { x => x.ActionLabel, Lang?.T("Reject") ?? "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("TransferApprovals_RejectTransfer") ?? "Reject Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await TransferService.RejectTransferAsync(transfer.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("TransferApprovals_Rejected") ?? "Transfer rejected", Severity.Warning);
                await LoadTransfers();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task CancelTransfer(AirtimeTransferDto transfer)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("TransferApprovals_CancelTransfer") ?? "Cancel Transfer"} #{transfer.Id}" },
            { x => x.ActionLabel, Lang?.T("Cancel") ?? "Cancel Transfer" },
            { x => x.ActionColor, Color.Dark }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("TransferApprovals_CancelTransfer") ?? "Cancel Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await TransferService.CancelTransferAsync(transfer.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("TransferApprovals_Cancelled") ?? "Transfer cancelled successfully", Severity.Info);
                await LoadTransfers();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task ApproveAll()
    {
        var pending = _allTransfers.Where(t => t.Status == DepositStatus.Pending).ToList();
        if (pending.Count == 0) return;

        var confirm = await DialogService.ShowMessageBox(
            Lang?.T("TransferApprovals_ApproveAllTitle") ?? "Approve All Transfers",
            $"{Lang?.T("TransferApprovals_ConfirmApproveAll") ?? "Are you sure you want to approve all"} {pending.Count} {(Lang?.T("Pending")?.ToLower() ?? "pending")} transfer(s)?",
            yesText: Lang?.T("Approvals_ApproveAll") ?? "Approve All", cancelText: Lang?.T("Cancel") ?? "Cancel");
        if (confirm != true) return;

        _approvingAll = true;
        StateHasChanged();
        var approved = 0;
        var failed = 0;
        var allMessages = new List<string>();
        string? groupUrl = null;
        var allWhatsAppUrls = new List<string>();
        var allApiResults = new List<string>();
        foreach (var transfer in pending)
        {
            try
            {
                var (_, notification) = await TransferService.ApproveTransferAsync(transfer.Id, CurrentUser.UserId ?? "", "Bulk approved");
                allWhatsAppUrls.AddRange(notification.WhatsAppUrls);
                if (notification.WhatsAppApiResults is { Count: > 0 })
                    allApiResults.AddRange(notification.WhatsAppApiResults);
                if (!string.IsNullOrWhiteSpace(notification.FormattedMessage))
                    allMessages.Add(notification.FormattedMessage);
                if (!string.IsNullOrWhiteSpace(notification.WhatsAppGroupUrl))
                    groupUrl = notification.WhatsAppGroupUrl;
                approved++;
            }
            catch
            {
                failed++;
            }
        }
        _approvingAll = false;
        Snackbar.Add($"{approved} {Lang?.T("TransferApprovals_BulkResult") ?? "transfer(s) approved"}" + (failed > 0 ? $", {failed} {Lang?.T("Approvals_BulkFailed") ?? "failed"}" : ""), failed > 0 ? Severity.Warning : Severity.Success);
        await LoadTransfers();

        // Show WhatsApp API send results
        if (allApiResults.Count > 0)
        {
            Snackbar.Add(string.Format(Lang?.T("WhatsApp_SentCount") ?? "WhatsApp messages sent to {0} dealer(s)", allApiResults.Count), Severity.Success);
        }

        // Open DealerWhatsApp URLs directly (fallback if API not configured)
        foreach (var url in allWhatsAppUrls)
        {
            try { await JS.InvokeVoidAsync("open", url, "_blank"); } catch { }
        }

        // Auto-copy combined messages and open WhatsApp group
        if (allMessages.Count > 0)
        {
            var combined = string.Join("\n\n━━━━━━━━━━━━━━━━━━━━\n\n", allMessages);
            try
            {
                await JS.InvokeVoidAsync("navigator.clipboard.writeText", combined);
                Snackbar.Add(string.Format(Lang?.T("WhatsApp_CopiedCount") ?? "{0} message(s) copied to clipboard — paste in the WhatsApp group", allMessages.Count), Severity.Info,
                    config => config.VisibleStateDuration = 5000);
            }
            catch
            {
                Snackbar.Add(Lang?.T("WhatsApp_CopyFailed") ?? "Could not auto-copy messages", Severity.Warning);
            }

            if (!string.IsNullOrWhiteSpace(groupUrl))
            {
                try { await JS.InvokeVoidAsync("open", groupUrl, "_blank"); } catch { }
            }
        }
    }

    private async Task HandleNotification(NotificationResult notification)
    {
        // Show WhatsApp API send results
        if (notification.WhatsAppApiResults is { Count: > 0 })
        {
            foreach (var result in notification.WhatsAppApiResults)
            {
                Snackbar.Add(string.Format(Lang?.T("WhatsApp_Sent") ?? "WhatsApp sent: {0}", result), Severity.Success);
            }
        }

        // Open DealerWhatsApp URLs directly in browser (fallback if API not configured)
        foreach (var url in notification.WhatsAppUrls)
        {
            try { await JS.InvokeVoidAsync("open", url, "_blank"); } catch { }
        }

        // Auto-copy message to clipboard and open WhatsApp group
        if (!string.IsNullOrWhiteSpace(notification.FormattedMessage))
        {
            try
            {
                await JS.InvokeVoidAsync("navigator.clipboard.writeText", notification.FormattedMessage);
                Snackbar.Add(Lang?.T("WhatsApp_CopiedSingle") ?? "Message copied to clipboard — paste it in the WhatsApp group", Severity.Info,
                    config => config.VisibleStateDuration = 5000);
            }
            catch
            {
                Snackbar.Add(Lang?.T("WhatsApp_CopySingleFailed") ?? "Could not auto-copy message", Severity.Warning);
            }

            if (!string.IsNullOrWhiteSpace(notification.WhatsAppGroupUrl))
            {
                try { await JS.InvokeVoidAsync("open", notification.WhatsAppGroupUrl, "_blank"); } catch { }
            }
        }
    }
}
