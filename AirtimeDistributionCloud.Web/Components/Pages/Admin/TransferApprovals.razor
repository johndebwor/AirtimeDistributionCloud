@page "/admin/transfer-approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeTransferService TransferService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>Transfer Approvals - Airtime Distribution</PageTitle>

<div class="page-header">
    <h1>Transfer Approvals</h1>
    <p>Review and approve/reject airtime transfers</p>
</div>

<div class="page-toolbar">
    <MudChipSet T="string" SelectedValuesChanged="OnFilterChanged" SelectionMode="SelectionMode.SingleSelection">
        <MudChip T="string" Value="@("Pending")" Default="true" Color="Color.Warning" Variant="Variant.Outlined">Pending</MudChip>
        <MudChip T="string" Value="@("Approved")" Color="Color.Success" Variant="Variant.Outlined">Approved</MudChip>
        <MudChip T="string" Value="@("Rejected")" Color="Color.Error" Variant="Variant.Outlined">Rejected</MudChip>
        <MudChip T="string" Value="@("All")" Variant="Variant.Outlined">All</MudChip>
    </MudChipSet>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeTransferDto" Items="@_filteredTransfers" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@_quickFilter">
        <ToolBarContent>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search by dealer, product, branch..."
                          Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                          IconSize="Size.Medium" Class="mt-0" Immediate="true" />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.BranchName" Title="Branch" />
            <PropertyColumn Property="x => x.ProductName" Title="Product" />
            <PropertyColumn Property="x => x.DealerName" Title="Dealer" />
            <PropertyColumn Property="x => x.Amount" Title="Amount" Format="C6" />
            <TemplateColumn Title="Transfer Type" Sortable="false">
                <CellTemplate>
                    @{
                        var typeColor = context.Item.TransferType switch
                        {
                            TransferType.Loan => Color.Warning,
                            TransferType.Cash => Color.Success,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@typeColor" Size="Size.Small">@context.Item.TransferType</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="Status" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="Date" Format="dd MMM yyyy HH:mm" />
            <TemplateColumn Title="Actions" Sortable="false">
                <CellTemplate>
                    @if (context.Item.Status == DepositStatus.Pending)
                    {
                        <MudStack Row="true" Spacing="1">
                            <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Success"
                                       StartIcon="@Icons.Material.Filled.Check"
                                       OnClick="@(() => ApproveTransfer(context.Item))">Approve</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Error"
                                       StartIcon="@Icons.Material.Filled.Close"
                                       OnClick="@(() => RejectTransfer(context.Item))">Reject</MudButton>
                        </MudStack>
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>No transfers found.</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<AirtimeTransferDto> _allTransfers = new();
    private List<AirtimeTransferDto> _filteredTransfers = new();
    private string _currentFilter = "Pending";
    private string _searchString = "";
    private bool _loading = true;

    private Func<AirtimeTransferDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.DealerName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.ProductName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.BranchName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadTransfers();
    }

    private async Task LoadTransfers()
    {
        _loading = true;
        try
        {
            _allTransfers = (await TransferService.GetAllTransfersAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading transfers: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(IReadOnlyCollection<string> values)
    {
        _currentFilter = values.FirstOrDefault() ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredTransfers = _currentFilter switch
        {
            "Pending" => _allTransfers.Where(t => t.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allTransfers.Where(t => t.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allTransfers.Where(t => t.Status == DepositStatus.Rejected).ToList(),
            _ => _allTransfers.ToList()
        };
    }

    private async Task ApproveTransfer(AirtimeTransferDto transfer)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Approve Transfer #{transfer.Id}" },
            { x => x.ActionLabel, "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Approve Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await TransferService.ApproveTransferAsync(transfer.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Transfer approved successfully", Severity.Success);
                await LoadTransfers();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectTransfer(AirtimeTransferDto transfer)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Reject Transfer #{transfer.Id}" },
            { x => x.ActionLabel, "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Reject Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await TransferService.RejectTransferAsync(transfer.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Transfer rejected", Severity.Warning);
                await LoadTransfers();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }
}
