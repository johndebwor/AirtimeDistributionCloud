@rendermode InteractiveServer
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@inject IBranchService BranchService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Model.Name" Label="@(Lang?.T("Name") ?? "Name")" Required="true"
                      RequiredError="@(Lang?.T("NameRequired") ?? "Name is required")" Class="mb-3" />
        <MudTextField @bind-Value="Model.Location" Label="@(Lang?.T("Location") ?? "Location")" Required="true"
                      RequiredError="@(Lang?.T("Branches_LocationRequired") ?? "Location is required")" Class="mb-3" />
        @if (IsEdit)
        {
            <MudSwitch T="bool" @bind-Value="Model.IsActive" Label="@(Lang?.T("Active") ?? "Active")" Color="Color.Primary" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@(Lang?.T("Cancel") ?? "Cancel")</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit"
                   Disabled="@_saving">@(Lang?.T("Save") ?? "Save")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }
    [Parameter] public bool IsEdit { get; set; }
    [Parameter] public BranchModel Model { get; set; } = new();

    private bool _saving;

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Model.Name) || string.IsNullOrWhiteSpace(Model.Location))
        {
            Snackbar.Add(Lang?.T("Branches_NameAndLocationRequired") ?? "Name and Location are required", Severity.Warning);
            return;
        }

        _saving = true;
        try
        {
            if (IsEdit)
            {
                await BranchService.UpdateBranchAsync(new UpdateBranchRequest(
                    Model.Id, Model.Name, Model.Location, Model.IsActive));
            }
            else
            {
                await BranchService.CreateBranchAsync(new CreateBranchRequest(
                    Model.Name, Model.Location));
            }
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    public class BranchModel
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Location { get; set; } = "";
        public bool IsActive { get; set; } = true;
    }
}
