@page "/admin/expense-approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Interfaces
@inject IExpenseService ExpenseService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("ExpenseApprovals_Title") ?? "Expense Approvals") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("ExpenseApprovals_Title") ?? "Expense Approvals")</h1>
    <p>@(Lang?.T("ExpenseApprovals_Subtitle") ?? "Review and approve/reject expenses requiring authorization")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("ExpenseApprovals_Search") ?? "Search by description, branch, receipt...")"
                  Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                  IconSize="Size.Medium" Class="mt-0" Immediate="true" Style="max-width:300px;" />
    @if (_pendingCount > 0 && _currentFilter == "Pending")
    {
        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small"
                   StartIcon="@Icons.Material.Filled.DoneAll" OnClick="ApproveAll"
                   Disabled="@_approvingAll">
            @(Lang?.T("Approvals_ApproveAll") ?? "Approve All") (@_pendingCount)
        </MudButton>
    }
</div>

<!-- Status Filter Tabs -->
<div class="approval-filter-tabs mb-4">
    @foreach (var (label, value, color, count) in _filterOptions)
    {
        <button class="approval-tab @(_currentFilter == value ? "approval-tab-active" : "")"
                style="@(_currentFilter == value ? $"border-color: var(--mud-palette-{color}); color: var(--mud-palette-{color});" : "")"
                @onclick="@(() => OnFilterChanged(value))">
            @label
            @if (count > 0)
            {
                <span class="approval-tab-badge" style="background: var(--mud-palette-@color);">@count</span>
            }
        </button>
    }
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="ExpenseDto" Items="@_filteredExpenses" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@_quickFilter">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.BranchName" Title="@(Lang?.T("Branch") ?? "Branch")" />
            <PropertyColumn Property="x => x.Description" Title="@(Lang?.T("Description") ?? "Description")" />
            <TemplateColumn Title="@(Lang?.T("Category") ?? "Category")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="Color.Info" Size="Size.Small">@context.Item.CategoryName</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Amount" Title="@(Lang?.T("Amount") ?? "Amount")" Format="C6" />
            <PropertyColumn Property="x => x.ExpenseDate" Title="@(Lang?.T("ExpenseApprovals_ExpenseDate") ?? "Expense Date")" Format="dd MMM yyyy" />
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            DepositStatus.Cancelled => Color.Dark,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.ReceiptNumber" Title="@(Lang?.T("ExpenseApprovals_ReceiptNum") ?? "Receipt #")" />
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    @if (context.Item.Status == DepositStatus.Pending)
                    {
                        <div class="d-flex gap-1">
                            <MudTooltip Text="@(Lang?.T("Approve") ?? "Approve")">
                                <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success"
                                               Size="Size.Small"
                                               OnClick="@(() => ApproveExpense(context.Item))" />
                            </MudTooltip>
                            <MudTooltip Text="@(Lang?.T("Reject") ?? "Reject")">
                                <MudIconButton Icon="@Icons.Material.Filled.Cancel" Color="Color.Error"
                                               Size="Size.Small"
                                               OnClick="@(() => RejectExpense(context.Item))" />
                            </MudTooltip>
                        </div>
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Expenses_NotFound") ?? "No expenses found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<ExpenseDto> _allExpenses = new();
    private List<ExpenseDto> _filteredExpenses = new();
    private string _currentFilter = "Pending";
    private string _searchString = "";
    private bool _loading = true;
    private bool _approvingAll;
    private int _pendingCount => _allExpenses.Count(e => e.Status == DepositStatus.Pending);

    private IEnumerable<(string Label, string Value, string Color, int Count)> _filterOptions =>
    [
        (Lang?.T("Pending") ?? "Pending",   "Pending",  "warning", _allExpenses.Count(e => e.Status == DepositStatus.Pending)),
        (Lang?.T("Approved") ?? "Approved", "Approved", "success", _allExpenses.Count(e => e.Status == DepositStatus.Approved)),
        (Lang?.T("Rejected") ?? "Rejected", "Rejected", "error",   _allExpenses.Count(e => e.Status == DepositStatus.Rejected)),
        (Lang?.T("All") ?? "All",           "All",      "primary", _allExpenses.Count),
    ];

    private Func<ExpenseDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.Description.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.BranchName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (!string.IsNullOrEmpty(x.ReceiptNumber) && x.ReceiptNumber.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadExpenses();
    }

    private async Task LoadExpenses()
    {
        _loading = true;
        try
        {
            _allExpenses = (await ExpenseService.GetAllExpensesAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading"} {Lang?.T("ExpenseApprovals_Title")?.ToLower() ?? "expenses"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(string value)
    {
        _currentFilter = value ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredExpenses = _currentFilter switch
        {
            "Pending" => _allExpenses.Where(e => e.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allExpenses.Where(e => e.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allExpenses.Where(e => e.Status == DepositStatus.Rejected).ToList(),
            _ => _allExpenses.ToList()
        };
    }

    private async Task ApproveExpense(ExpenseDto expense)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("ExpenseApprovals_ApproveExpense") ?? "Approve Expense"} #{expense.Id}" },
            { x => x.ActionLabel, Lang?.T("Approve") ?? "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("ExpenseApprovals_ApproveExpense") ?? "Approve Expense", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await ExpenseService.ApproveExpenseAsync(expense.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("ExpenseApprovals_Approved") ?? "Expense approved successfully", Severity.Success);
                await LoadExpenses();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectExpense(ExpenseDto expense)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("ExpenseApprovals_RejectExpense") ?? "Reject Expense"} #{expense.Id}" },
            { x => x.ActionLabel, Lang?.T("Reject") ?? "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("ExpenseApprovals_RejectExpense") ?? "Reject Expense", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await ExpenseService.RejectExpenseAsync(expense.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("ExpenseApprovals_Rejected") ?? "Expense rejected", Severity.Warning);
                await LoadExpenses();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task ApproveAll()
    {
        var pending = _allExpenses.Where(e => e.Status == DepositStatus.Pending).ToList();
        if (pending.Count == 0) return;

        var confirm = await DialogService.ShowMessageBox(
            Lang?.T("ExpenseApprovals_ApproveAllTitle") ?? "Approve All Expenses",
            $"{Lang?.T("ExpenseApprovals_ConfirmApproveAll") ?? "Are you sure you want to approve all"} {pending.Count} {(Lang?.T("Pending")?.ToLower() ?? "pending")} expense(s)?",
            yesText: Lang?.T("Approvals_ApproveAll") ?? "Approve All", cancelText: Lang?.T("Cancel") ?? "Cancel");
        if (confirm != true) return;

        _approvingAll = true;
        StateHasChanged();
        var approved = 0;
        var failed = 0;
        foreach (var expense in pending)
        {
            try
            {
                await ExpenseService.ApproveExpenseAsync(expense.Id, CurrentUser.UserId ?? "", "Bulk approved");
                approved++;
            }
            catch
            {
                failed++;
            }
        }
        _approvingAll = false;
        Snackbar.Add($"{approved} {Lang?.T("ExpenseApprovals_BulkResult") ?? "expense(s) approved"}" + (failed > 0 ? $", {failed} {Lang?.T("Approvals_BulkFailed") ?? "failed"}" : ""), failed > 0 ? Severity.Warning : Severity.Success);
        await LoadExpenses();
    }
}
