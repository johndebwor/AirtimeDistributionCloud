@page "/admin/expense-approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@using AirtimeDistributionCloud.Core.Interfaces
@inject IExpenseService ExpenseService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>Expense Approvals - Airtime Distribution</PageTitle>

<div class="page-header">
    <h1>Expense Approvals</h1>
    <p>Review and approve/reject expenses requiring authorization</p>
</div>

<div class="page-toolbar">
    <MudChipSet T="string" SelectedValuesChanged="OnFilterChanged" SelectionMode="SelectionMode.SingleSelection">
        <MudChip T="string" Value="@("Pending")" Default="true" Color="Color.Warning" Variant="Variant.Outlined">Pending</MudChip>
        <MudChip T="string" Value="@("Approved")" Color="Color.Success" Variant="Variant.Outlined">Approved</MudChip>
        <MudChip T="string" Value="@("Rejected")" Color="Color.Error" Variant="Variant.Outlined">Rejected</MudChip>
        <MudChip T="string" Value="@("All")" Variant="Variant.Outlined">All</MudChip>
    </MudChipSet>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="ExpenseDto" Items="@_filteredExpenses" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@_quickFilter">
        <ToolBarContent>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search by description, branch, receipt..."
                          Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                          IconSize="Size.Medium" Class="mt-0" Immediate="true" />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.BranchName" Title="Branch" />
            <PropertyColumn Property="x => x.Description" Title="Description" />
            <TemplateColumn Title="Category" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="Color.Info" Size="Size.Small">@context.Item.Category</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Amount" Title="Amount" Format="C6" />
            <PropertyColumn Property="x => x.ExpenseDate" Title="Expense Date" Format="dd MMM yyyy" />
            <TemplateColumn Title="Status" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.ReceiptNumber" Title="Receipt #" />
            <TemplateColumn Title="Actions" Sortable="false">
                <CellTemplate>
                    @if (context.Item.Status == DepositStatus.Pending)
                    {
                        <MudStack Row="true" Spacing="1">
                            <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Success"
                                       StartIcon="@Icons.Material.Filled.Check"
                                       OnClick="@(() => ApproveExpense(context.Item))">Approve</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Error"
                                       StartIcon="@Icons.Material.Filled.Close"
                                       OnClick="@(() => RejectExpense(context.Item))">Reject</MudButton>
                        </MudStack>
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>No expenses found.</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<ExpenseDto> _allExpenses = new();
    private List<ExpenseDto> _filteredExpenses = new();
    private string _currentFilter = "Pending";
    private string _searchString = "";
    private bool _loading = true;

    private Func<ExpenseDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.Description.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.BranchName.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (!string.IsNullOrEmpty(x.ReceiptNumber) && x.ReceiptNumber.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadExpenses();
    }

    private async Task LoadExpenses()
    {
        _loading = true;
        try
        {
            _allExpenses = (await ExpenseService.GetAllExpensesAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading expenses: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(IReadOnlyCollection<string> values)
    {
        _currentFilter = values.FirstOrDefault() ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredExpenses = _currentFilter switch
        {
            "Pending" => _allExpenses.Where(e => e.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allExpenses.Where(e => e.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allExpenses.Where(e => e.Status == DepositStatus.Rejected).ToList(),
            _ => _allExpenses.ToList()
        };
    }

    private async Task ApproveExpense(ExpenseDto expense)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Approve Expense #{expense.Id}" },
            { x => x.ActionLabel, "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Approve Expense", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await ExpenseService.ApproveExpenseAsync(expense.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Expense approved successfully", Severity.Success);
                await LoadExpenses();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectExpense(ExpenseDto expense)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Reject Expense #{expense.Id}" },
            { x => x.ActionLabel, "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Reject Expense", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await ExpenseService.RejectExpenseAsync(expense.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Expense rejected", Severity.Warning);
                await LoadExpenses();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }
}
