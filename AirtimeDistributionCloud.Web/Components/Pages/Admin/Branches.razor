@page "/admin/branches"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@inject IBranchService BranchService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Branches_Title") ?? "Branches") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Branches_Title") ?? "Branches")</h1>
    <p>@(Lang?.T("Branches_Subtitle") ?? "Manage branch locations")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Branches_Search") ?? "Search branches...")" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
               OnClick="OpenCreateDialog">@(Lang?.T("Branches_Add") ?? "Add Branch")</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="BranchDto" Items="@_branches" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@(new Func<BranchDto, bool>(FilterFunc))">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.Name" Title="@(Lang?.T("Name") ?? "Name")" />
            <PropertyColumn Property="x => x.Location" Title="@(Lang?.T("Location") ?? "Location")" />
            <TemplateColumn Title="@(Lang?.T("Default") ?? "Default")" Sortable="false">
                <CellTemplate>
                    @if (context.Item.IsDefault)
                    {
                        <MudChip T="string" Color="Color.Primary" Size="Size.Small">@(Lang?.T("Default") ?? "Default")</MudChip>
                    }
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.IsActive ? Color.Success : Color.Error)" Size="Size.Small">
                        @(context.Item.IsActive ? (Lang?.T("Active") ?? "Active") : (Lang?.T("Inactive") ?? "Inactive"))
                    </MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context.Item))" />
                    @if (!context.Item.IsDefault)
                    {
                        <MudIconButton Icon="@Icons.Material.Filled.Star" Size="Size.Small" Color="Color.Warning"
                                       OnClick="@(() => SetDefault(context.Item))" />
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Branches_NotFound") ?? "No branches found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<BranchDto> _branches = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBranches();
    }

    private async Task LoadBranches()
    {
        _loading = true;
        try
        {
            _branches = (await BranchService.GetAllBranchesAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading"} {Lang?.T("Branches_Title")?.ToLower() ?? "branches"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool FilterFunc(BranchDto branch) =>
        string.IsNullOrWhiteSpace(_searchString) ||
        branch.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        branch.Location.Contains(_searchString, StringComparison.OrdinalIgnoreCase);

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters<BranchDialog> { { x => x.IsEdit, false } };
        var dialog = await DialogService.ShowAsync<BranchDialog>(Lang?.T("Branches_Add") ?? "Add Branch", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadBranches();
    }

    private async Task SetDefault(BranchDto branch)
    {
        try
        {
            await BranchService.SetDefaultBranchAsync(branch.Id);
            Snackbar.Add($"{branch.Name} {Lang?.T("Branches_SetDefault") ?? "set as default branch"}", Severity.Success);
            await LoadBranches();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
        }
    }

    private async Task OpenEditDialog(BranchDto branch)
    {
        var parameters = new DialogParameters<BranchDialog>
        {
            { x => x.IsEdit, true },
            { x => x.Model, new BranchDialog.BranchModel
                {
                    Id = branch.Id, Name = branch.Name,
                    Location = branch.Location, IsActive = branch.IsActive
                }
            }
        };
        var dialog = await DialogService.ShowAsync<BranchDialog>(Lang?.T("Branches_EditBranch") ?? "Edit Branch", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadBranches();
    }
}
