@page "/admin/approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeDepositService DepositService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Approvals_Title") ?? "Approvals") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Approvals_Title") ?? "Approvals")</h1>
    <p>@(Lang?.T("Approvals_Subtitle") ?? "Review and approve pending deposits")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Approvals_Search") ?? "Search by product...")"
                  Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                  IconSize="Size.Medium" Class="mt-0" Immediate="true" Style="max-width:300px;" />
    @if (_pendingCount > 0 && _currentFilter == "Pending")
    {
        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small"
                   StartIcon="@Icons.Material.Filled.DoneAll" OnClick="ApproveAll"
                   Disabled="@_approvingAll">
            @(Lang?.T("Approvals_ApproveAll") ?? "Approve All") (@_pendingCount)
        </MudButton>
    }
</div>

<!-- Status Filter Tabs -->
<div class="approval-filter-tabs mb-4">
    @foreach (var (label, value, color, count) in _filterOptions)
    {
        <button class="approval-tab @(_currentFilter == value ? "approval-tab-active" : "")"
                style="@(_currentFilter == value ? $"border-color: var(--mud-palette-{color}); color: var(--mud-palette-{color});" : "")"
                @onclick="@(() => OnFilterChanged(value))">
            @label
            @if (count > 0)
            {
                <span class="approval-tab-badge" style="background: var(--mud-palette-@color);">@count</span>
            }
        </button>
    }
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeDepositDto" Items="@_filteredDeposits" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@_quickFilter">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.ProductName" Title="@(Lang?.T("Product") ?? "Product")" />
            <PropertyColumn Property="x => x.Amount" Title="@(Lang?.T("Amount") ?? "Amount")" Format="C6" />
            <PropertyColumn Property="x => x.BonusAmount" Title="@(Lang?.T("Bonus") ?? "Bonus")" Format="C6" />
            <PropertyColumn Property="x => x.TotalAmount" Title="@(Lang?.T("Total") ?? "Total")" Format="C6" />
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            DepositStatus.Cancelled => Color.Dark,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="@(Lang?.T("Date") ?? "Date")" Format="dd MMM yyyy HH:mm" />
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    <div class="d-flex gap-1">
                        @if (context.Item.Status == DepositStatus.Pending)
                        {
                            <MudTooltip Text="@(Lang?.T("Approve") ?? "Approve")">
                                <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success"
                                               Size="Size.Small"
                                               OnClick="@(() => ApproveDeposit(context.Item))" />
                            </MudTooltip>
                            <MudTooltip Text="@(Lang?.T("Reject") ?? "Reject")">
                                <MudIconButton Icon="@Icons.Material.Filled.Cancel" Color="Color.Error"
                                               Size="Size.Small"
                                               OnClick="@(() => RejectDeposit(context.Item))" />
                            </MudTooltip>
                        }
                        @if (context.Item.Status == DepositStatus.Pending || context.Item.Status == DepositStatus.Approved)
                        {
                            <MudTooltip Text="@(Lang?.T("Cancel") ?? "Cancel")">
                                <MudIconButton Icon="@Icons.Material.Filled.Block" Color="Color.Dark"
                                               Size="Size.Small"
                                               OnClick="@(() => CancelDeposit(context.Item))" />
                            </MudTooltip>
                        }
                    </div>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Deposits_NotFound") ?? "No deposits found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<AirtimeDepositDto> _allDeposits = new();
    private List<AirtimeDepositDto> _filteredDeposits = new();
    private string _currentFilter = "Pending";
    private string _searchString = "";
    private bool _loading = true;
    private bool _approvingAll;
    private int _pendingCount => _allDeposits.Count(d => d.Status == DepositStatus.Pending);

    private IEnumerable<(string Label, string Value, string Color, int Count)> _filterOptions =>
    [
        (Lang?.T("Pending") ?? "Pending",    "Pending",   "warning", _allDeposits.Count(d => d.Status == DepositStatus.Pending)),
        (Lang?.T("Approved") ?? "Approved",  "Approved",  "success", _allDeposits.Count(d => d.Status == DepositStatus.Approved)),
        (Lang?.T("Rejected") ?? "Rejected",  "Rejected",  "error",   _allDeposits.Count(d => d.Status == DepositStatus.Rejected)),
        (Lang?.T("Cancelled") ?? "Cancelled","Cancelled", "dark",    _allDeposits.Count(d => d.Status == DepositStatus.Cancelled)),
        (Lang?.T("All") ?? "All",            "All",       "primary", _allDeposits.Count),
    ];

    private Func<AirtimeDepositDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return true;
        return x.ProductName.Contains(_searchString, StringComparison.OrdinalIgnoreCase);
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadDeposits();
    }

    private async Task LoadDeposits()
    {
        _loading = true;
        try
        {
            _allDeposits = (await DepositService.GetAllDepositsAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading"} {Lang?.T("Approvals_Title")?.ToLower() ?? "deposits"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(string value)
    {
        _currentFilter = value ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredDeposits = _currentFilter switch
        {
            "Pending" => _allDeposits.Where(d => d.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allDeposits.Where(d => d.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allDeposits.Where(d => d.Status == DepositStatus.Rejected).ToList(),
            "Cancelled" => _allDeposits.Where(d => d.Status == DepositStatus.Cancelled).ToList(),
            _ => _allDeposits.ToList()
        };
    }

    private async Task ApproveDeposit(AirtimeDepositDto deposit)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("Approvals_ApproveDeposit") ?? "Approve Deposit"} #{deposit.Id}" },
            { x => x.ActionLabel, Lang?.T("Approve") ?? "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("Approvals_ApproveDeposit") ?? "Approve Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await DepositService.ApproveDepositAsync(deposit.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("Approvals_DepositApproved") ?? "Deposit approved successfully", Severity.Success);
                await LoadDeposits();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectDeposit(AirtimeDepositDto deposit)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("Approvals_RejectDeposit") ?? "Reject Deposit"} #{deposit.Id}" },
            { x => x.ActionLabel, Lang?.T("Reject") ?? "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("Approvals_RejectDeposit") ?? "Reject Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await DepositService.RejectDepositAsync(deposit.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("Approvals_DepositRejected") ?? "Deposit rejected", Severity.Warning);
                await LoadDeposits();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task CancelDeposit(AirtimeDepositDto deposit)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"{Lang?.T("Approvals_CancelDeposit") ?? "Cancel Deposit"} #{deposit.Id}" },
            { x => x.ActionLabel, Lang?.T("Cancel") ?? "Cancel Deposit" },
            { x => x.ActionColor, Color.Dark }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>(Lang?.T("Approvals_CancelDeposit") ?? "Cancel Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await DepositService.CancelDepositAsync(deposit.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add(Lang?.T("Approvals_DepositCancelled") ?? "Deposit cancelled successfully", Severity.Info);
                await LoadDeposits();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task ApproveAll()
    {
        var pending = _allDeposits.Where(d => d.Status == DepositStatus.Pending).ToList();
        if (pending.Count == 0) return;

        var confirm = await DialogService.ShowMessageBox(
            Lang?.T("Approvals_ApproveAllTitle") ?? "Approve All Deposits",
            $"{Lang?.T("Approvals_ConfirmApproveAll") ?? "Are you sure you want to approve all"} {pending.Count} {(Lang?.T("Pending")?.ToLower() ?? "pending")} deposit(s)?",
            yesText: Lang?.T("Approvals_ApproveAll") ?? "Approve All", cancelText: Lang?.T("Cancel") ?? "Cancel");
        if (confirm != true) return;

        _approvingAll = true;
        StateHasChanged();
        var approved = 0;
        var failed = 0;
        foreach (var deposit in pending)
        {
            try
            {
                await DepositService.ApproveDepositAsync(deposit.Id, CurrentUser.UserId ?? "", "Bulk approved");
                approved++;
            }
            catch
            {
                failed++;
            }
        }
        _approvingAll = false;
        Snackbar.Add($"{approved} {Lang?.T("Approvals_BulkResult") ?? "deposit(s) approved"}" + (failed > 0 ? $", {failed} {Lang?.T("Approvals_BulkFailed") ?? "failed"}" : ""), failed > 0 ? Severity.Warning : Severity.Success);
        await LoadDeposits();
    }
}
