@page "/admin/approvals"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeDepositService DepositService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>Approvals - Airtime Distribution</PageTitle>

<div class="page-header">
    <h1>Approvals</h1>
    <p>Review and approve pending deposits</p>
</div>

<div class="page-toolbar">
    <MudChipSet T="string" SelectedValuesChanged="OnFilterChanged" SelectionMode="SelectionMode.SingleSelection">
        <MudChip T="string" Value="@("Pending")" Default="true" Color="Color.Warning" Variant="Variant.Outlined">Pending</MudChip>
        <MudChip T="string" Value="@("Approved")" Color="Color.Success" Variant="Variant.Outlined">Approved</MudChip>
        <MudChip T="string" Value="@("Rejected")" Color="Color.Error" Variant="Variant.Outlined">Rejected</MudChip>
        <MudChip T="string" Value="@("All")" Variant="Variant.Outlined">All</MudChip>
    </MudChipSet>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeDepositDto" Items="@_filteredDeposits" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.ProductName" Title="Product" />
            <PropertyColumn Property="x => x.Amount" Title="Amount" Format="C6" />
            <PropertyColumn Property="x => x.BonusAmount" Title="Bonus" Format="C6" />
            <PropertyColumn Property="x => x.TotalAmount" Title="Total" Format="C6" />
            <TemplateColumn Title="Status" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="Date" Format="dd MMM yyyy HH:mm" />
            <TemplateColumn Title="Actions" Sortable="false">
                <CellTemplate>
                    @if (context.Item.Status == DepositStatus.Pending)
                    {
                        <MudStack Row="true" Spacing="1">
                            <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Success"
                                       StartIcon="@Icons.Material.Filled.Check"
                                       OnClick="@(() => ApproveDeposit(context.Item))">Approve</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Error"
                                       StartIcon="@Icons.Material.Filled.Close"
                                       OnClick="@(() => RejectDeposit(context.Item))">Reject</MudButton>
                        </MudStack>
                    }
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>No deposits found.</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<AirtimeDepositDto> _allDeposits = new();
    private List<AirtimeDepositDto> _filteredDeposits = new();
    private string _currentFilter = "Pending";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDeposits();
    }

    private async Task LoadDeposits()
    {
        _loading = true;
        try
        {
            _allDeposits = (await DepositService.GetAllDepositsAsync()).ToList();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading deposits: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnFilterChanged(IReadOnlyCollection<string> values)
    {
        _currentFilter = values.FirstOrDefault() ?? "Pending";
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        _filteredDeposits = _currentFilter switch
        {
            "Pending" => _allDeposits.Where(d => d.Status == DepositStatus.Pending).ToList(),
            "Approved" => _allDeposits.Where(d => d.Status == DepositStatus.Approved).ToList(),
            "Rejected" => _allDeposits.Where(d => d.Status == DepositStatus.Rejected).ToList(),
            _ => _allDeposits.ToList()
        };
    }

    private async Task ApproveDeposit(AirtimeDepositDto deposit)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Approve Deposit #{deposit.Id}" },
            { x => x.ActionLabel, "Approve" },
            { x => x.ActionColor, Color.Success }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Approve Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await DepositService.ApproveDepositAsync(deposit.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Deposit approved successfully", Severity.Success);
                await LoadDeposits();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task RejectDeposit(AirtimeDepositDto deposit)
    {
        var parameters = new DialogParameters<ApprovalNotesDialog>
        {
            { x => x.Title, $"Reject Deposit #{deposit.Id}" },
            { x => x.ActionLabel, "Reject" },
            { x => x.ActionColor, Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ApprovalNotesDialog>("Reject Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false, Data: string notes })
        {
            try
            {
                await DepositService.RejectDepositAsync(deposit.Id, CurrentUser.UserId ?? "", notes);
                Snackbar.Add("Deposit rejected", Severity.Warning);
                await LoadDeposits();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }
}
