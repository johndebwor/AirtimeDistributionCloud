@page "/admin/deposits"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeDepositService DepositService
@inject IProductService ProductService
@inject ICurrentUserService CurrentUser
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Deposits_Title") ?? "Airtime Deposits") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Deposits_Title") ?? "Airtime Deposits")</h1>
    <p>@(Lang?.T("Deposits_Subtitle") ?? "Track and create airtime deposits")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Deposits_Search") ?? "Search deposits...")" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
               OnClick="OpenCreateDialog">@(Lang?.T("Deposits_New") ?? "New Deposit")</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeDepositDto" Items="@_deposits" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@(new Func<AirtimeDepositDto, bool>(FilterFunc))">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.ProductName" Title="@(Lang?.T("Product") ?? "Product")" />
            <PropertyColumn Property="x => x.Amount" Title="@(Lang?.T("Amount") ?? "Amount")" Format="C6" />
            <PropertyColumn Property="x => x.BonusPercentage" Title="@(Lang?.T("Products_BonusPercent") ?? "Bonus %")" Format="N6" />
            <PropertyColumn Property="x => x.BonusAmount" Title="@(Lang?.T("Bonus") ?? "Bonus")" Format="C6" />
            <PropertyColumn Property="x => x.TotalAmount" Title="@(Lang?.T("Total") ?? "Total")" Format="C6" />
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    @{
                        var color = context.Item.Status switch
                        {
                            Core.Enums.DepositStatus.Pending => Color.Warning,
                            Core.Enums.DepositStatus.Approved => Color.Success,
                            Core.Enums.DepositStatus.Rejected => Color.Error,
                            Core.Enums.DepositStatus.Cancelled => Color.Dark,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@color" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="@(Lang?.T("Date") ?? "Date")" Format="dd MMM yyyy HH:mm" />
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Deposits_NotFound") ?? "No deposits found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<AirtimeDepositDto> _deposits = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDeposits();
    }

    private async Task LoadDeposits()
    {
        _loading = true;
        try
        {
            _deposits = (await DepositService.GetAllDepositsAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading"} {Lang?.T("Deposits_Title")?.ToLower() ?? "deposits"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool FilterFunc(AirtimeDepositDto deposit) =>
        string.IsNullOrWhiteSpace(_searchString) ||
        deposit.ProductName.Contains(_searchString, StringComparison.OrdinalIgnoreCase);

    private async Task OpenCreateDialog()
    {
        var products = await ProductService.GetAllProductsAsync();
        var parameters = new DialogParameters<AirtimeDepositDialog>
        {
            { x => x.Products, products.Where(p => p.IsActive).ToList() }
        };
        var dialog = await DialogService.ShowAsync<AirtimeDepositDialog>(Lang?.T("Deposits_New") ?? "New Airtime Deposit", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadDeposits();
    }
}
