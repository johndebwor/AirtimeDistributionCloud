@page "/dealer/transfers"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator,Dealer")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Enums
@inject IAirtimeTransferService TransferService
@inject IProductService ProductService
@inject IBranchService BranchService
@inject IDealerService DealerService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Transfers_Title") ?? "Airtime Transfers") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Transfers_Title") ?? "Airtime Transfers")</h1>
    <p>@(Lang?.T("Transfers_Subtitle") ?? "Transfer airtime to dealers")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Transfers_Search") ?? "Search transfers...")" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.SwapHoriz"
               OnClick="OpenCreateDialog">@(Lang?.T("Transfers_New") ?? "New Transfer")</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="AirtimeTransferDto" Items="@_transfers" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@(new Func<AirtimeTransferDto, bool>(FilterFunc))">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.BranchName" Title="@(Lang?.T("Branch") ?? "Branch")" />
            <PropertyColumn Property="x => x.ProductName" Title="@(Lang?.T("Product") ?? "Product")" />
            <PropertyColumn Property="x => x.DealerName" Title="@(Lang?.T("Dealer") ?? "Dealer")" />
            <PropertyColumn Property="x => x.Amount" Title="@(Lang?.T("Transfers_AirtimeComm") ?? "Airtime + Comm")" Format="C6" />
            <PropertyColumn Property="x => x.LoanAmount" Title="@(Lang?.T("Transfers_Airtime") ?? "Airtime")" Format="C6" />
            <TemplateColumn Title="@(Lang?.T("Type") ?? "Type")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.TransferType == TransferType.Airtime ? Color.Warning : Color.Success)"
                             Size="Size.Small">@GetTransferTypeDisplay(context.Item.TransferType)</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    @{
                        var statusColor = context.Item.Status switch
                        {
                            DepositStatus.Pending => Color.Warning,
                            DepositStatus.Approved => Color.Success,
                            DepositStatus.Rejected => Color.Error,
                            DepositStatus.Cancelled => Color.Dark,
                            _ => Color.Default
                        };
                    }
                    <MudChip T="string" Color="@statusColor" Size="Size.Small">@context.Item.Status</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.CreatedDate" Title="@(Lang?.T("Date") ?? "Date")" Format="dd MMM yyyy HH:mm" />
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Transfers_NotFound") ?? "No transfers found.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<AirtimeTransferDto> _transfers = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadTransfers();
    }

    private async Task LoadTransfers()
    {
        _loading = true;
        try
        {
            _transfers = (await TransferService.GetAllTransfersAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading transfers"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private string GetTransferTypeDisplay(TransferType t) => t switch
    {
        TransferType.Cash => Lang?.T("Transfers_CashFromDealer") ?? "Cash from Dealer Account",
        _ => t.ToString()
    };

    private bool FilterFunc(AirtimeTransferDto t) =>
        string.IsNullOrWhiteSpace(_searchString) ||
        t.DealerName.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        t.ProductName.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        t.BranchName.Contains(_searchString, StringComparison.OrdinalIgnoreCase);

    private async Task OpenCreateDialog()
    {
        var products = (await ProductService.GetAllProductsAsync()).Where(p => p.IsActive).ToList();
        var branches = (await BranchService.GetAllBranchesAsync()).Where(b => b.IsActive).ToList();
        var dealers = await DealerService.GetAllDealersAsync();
        var dealerProductRates = (await DealerService.GetAllDealerProductRatesAsync()).ToList();

        var parameters = new DialogParameters<TransferDialog>
        {
            { x => x.Products, products },
            { x => x.Branches, branches },
            { x => x.Dealers, dealers.ToList() },
            { x => x.DealerProductRates, dealerProductRates }
        };
        var dialog = await DialogService.ShowAsync<TransferDialog>(Lang?.T("Transfers_NewTitle") ?? "New Airtime Transfer", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadTransfers();
    }
}
