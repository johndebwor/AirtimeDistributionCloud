@rendermode InteractiveServer
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@using AirtimeDistributionCloud.Core.Interfaces
@inject IAirtimeTransferService TransferService
@inject ICurrentUserService CurrentUser
@inject IUserPreferenceService UserPrefs
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JS

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudSelect T="int" @bind-Value="_branchId" Label="Branch" Required="true"
                           RequiredError="Branch is required" Placeholder="-- Select Branch --" Class="mb-3">
                    @foreach (var branch in Branches)
                    {
                        <MudSelectItem T="int" Value="@branch.Id">@branch.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudSelect T="int" Value="@_productId"
                           ValueChanged="@((int v) => { _productId = v; UpdateCommissionBreakdown(); })"
                           Label="Product" Required="true"
                           RequiredError="Product is required" Placeholder="-- Select Product --" Class="mb-3">
                    @foreach (var product in Products)
                    {
                        <MudSelectItem T="int" Value="@product.Id">@product.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudSelect T="int" Value="@_dealerId"
                           ValueChanged="@((int v) => { _dealerId = v; UpdateCommissionBreakdown(); })"
                           Label="Dealer" Required="true"
                           RequiredError="Dealer is required" Placeholder="-- Select Dealer --" Class="mb-3">
                    @foreach (var dealer in Dealers)
                    {
                        <MudSelectItem T="int" Value="@dealer.Id">@dealer.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6">
                <div @ref="_amountRef">
                    <MudTextField T="string" Value="@_amountDisplay" ValueChanged="OnAmountDisplayChanged"
                                  Label="Amount"
                                  Required="true" RequiredError="Amount is required" Class="mb-3" />
                </div>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudSelect T="TransferType" @bind-Value="_transferType" Label="Transfer Type" Required="true"
                           RequiredError="Transfer type is required" Class="mb-3">
                    <MudSelectItem T="TransferType" Value="TransferType.Airtime">Airtime</MudSelectItem>
                    <MudSelectItem T="TransferType" Value="TransferType.Cash">Cash from Dealer Account</MudSelectItem>
                </MudSelect>
            </MudItem>
            @if (_amount > 0 && _dealerId > 0 && _productId > 0)
            {
                <MudItem xs="12" sm="6">
                    <MudTextField T="string" Value="@FormatNumber(_loanAmount.ToString("F2"))"
                                  Label="Airtime Amount" ReadOnly="true" Class="mb-3"
                                  Variant="Variant.Filled" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField T="string" Value="@FormatNumber(_commissionAmount.ToString("F2"))"
                                  Label="@($"Commission ({_commissionRate}%)")" ReadOnly="true" Class="mb-3"
                                  Variant="Variant.Filled" />
                </MudItem>
                @if (_hasZeroCommission)
                {
                    <MudItem xs="12">
                        <MudAlert Severity="Severity.Warning" Class="mb-2">
                            This dealer has 0% commission for this product. You can proceed or cancel and update the commission rate first.
                        </MudAlert>
                    </MudItem>
                }
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@_saving">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public List<ProductDto> Products { get; set; } = new();
    [Parameter] public List<BranchDto> Branches { get; set; } = new();
    [Parameter] public List<DealerDto> Dealers { get; set; } = new();
    [Parameter] public List<DealerProductRateDto> DealerProductRates { get; set; } = new();

    private bool _saving;
    private int _branchId;
    private int _productId;
    private int _dealerId;
    private decimal _amount;
    private string _amountDisplay = "";
    private TransferType _transferType = TransferType.Airtime;
    private ElementReference _amountRef;

    private decimal _commissionRate;
    private decimal _loanAmount;
    private decimal _commissionAmount;
    private bool _hasZeroCommission;

    protected override async Task OnInitializedAsync()
    {
        var userId = CurrentUser.UserId;
        if (userId is not null)
        {
            var lastBranchId = await UserPrefs.GetIntAsync(userId, IUserPreferenceService.LastBranchId);
            if (lastBranchId.HasValue && Branches.Any(b => b.Id == lastBranchId.Value))
                _branchId = lastBranchId.Value;

            var lastProductId = await UserPrefs.GetIntAsync(userId, IUserPreferenceService.LastProductId);
            if (lastProductId.HasValue && Products.Any(p => p.Id == lastProductId.Value))
            {
                _productId = lastProductId.Value;
                UpdateCommissionBreakdown();
            }
        }

        if (_branchId == 0)
        {
            var defaultBranch = Branches.FirstOrDefault(b => b.IsDefault);
            if (defaultBranch is not null)
                _branchId = defaultBranch.Id;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initNumericFormat", _amountRef);
        }
    }

    private void UpdateCommissionBreakdown()
    {
        if (_dealerId == 0 || _productId == 0)
        {
            _commissionRate = 0;
            _loanAmount = _amount;
            _commissionAmount = 0;
            _hasZeroCommission = false;
            return;
        }

        var rate = DealerProductRates.FirstOrDefault(r => r.DealerId == _dealerId && r.ProductId == _productId);
        _commissionRate = rate?.CommissionRate ?? 0;
        _hasZeroCommission = _commissionRate == 0;
        _loanAmount = _commissionRate > 0 ? _amount / (1 + _commissionRate / 100m) : _amount;
        _commissionAmount = _amount - _loanAmount;
    }

    private void OnAmountDisplayChanged(string value)
    {
        _amountDisplay = FormatNumber(value);
        _amount = ParseNumber(value);
        UpdateCommissionBreakdown();
    }

    private async Task Submit()
    {
        var raw = await JS.InvokeAsync<string>("getNumericInputValue", _amountRef);
        _amount = ParseNumber(raw);
        UpdateCommissionBreakdown();

        if (_branchId == 0 || _productId == 0 || _dealerId == 0 || _amount <= 0)
        {
            Snackbar.Add("Please fill in all required fields", Severity.Warning);
            return;
        }

        if (_hasZeroCommission)
        {
            var confirmed = await DialogService.ShowMessageBox(
                "0% Commission",
                "This dealer's commission for this product is 0%. Proceed with the transfer anyway?",
                yesText: "Proceed", cancelText: "Cancel");
            if (confirmed != true) return;
        }

        _saving = true;
        try
        {
            await TransferService.CreateTransferAsync(new CreateAirtimeTransferRequest(
                _branchId, _productId, _dealerId, _amount, _transferType));

            var userId = CurrentUser.UserId;
            if (userId is not null)
            {
                await UserPrefs.SetAsync(userId, IUserPreferenceService.LastBranchId, _branchId.ToString());
                await UserPrefs.SetAsync(userId, IUserPreferenceService.LastProductId, _productId.ToString());
            }

            Snackbar.Add("Transfer submitted for approval", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private static string FormatNumber(string input)
    {
        if (string.IsNullOrEmpty(input)) return "";
        var clean = "";
        var hasDecimal = false;
        foreach (var c in input)
        {
            if (char.IsDigit(c)) clean += c;
            else if (c == '.' && !hasDecimal) { clean += c; hasDecimal = true; }
        }
        if (string.IsNullOrEmpty(clean)) return "";
        var parts = clean.Split('.');
        if (long.TryParse(parts[0], out var intPart))
            parts[0] = intPart.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"));
        return parts.Length > 1 ? $"{parts[0]}.{parts[1]}" : parts[0];
    }

    private static decimal ParseNumber(string formatted)
    {
        var clean = new string(formatted.Where(c => char.IsDigit(c) || c == '.').ToArray());
        return decimal.TryParse(clean, System.Globalization.NumberStyles.Any,
            System.Globalization.CultureInfo.InvariantCulture, out var val) ? val : 0;
    }
}
