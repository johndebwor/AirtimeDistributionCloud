@page "/dealer/registration"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator,Dealer")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@inject IDealerService DealerService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>Dealer Registration - Airtime Distribution</PageTitle>

<div class="page-header">
    <h1>Dealer Registration</h1>
    <p>Register and manage dealers</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="Search dealers..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.PersonAdd"
               OnClick="OpenCreateDialog">Register Dealer</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="DealerDto" Items="@_dealers" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@(new Func<DealerDto, bool>(FilterFunc))">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID" />
            <PropertyColumn Property="x => x.Name" Title="Name" />
            <TemplateColumn Title="Type" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.Type == Core.Enums.DealerType.Person ? Color.Info : Color.Secondary)"
                             Size="Size.Small">@context.Item.Type</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Gender" Title="Gender" />
            <PropertyColumn Property="x => x.IDNumber" Title="ID Number" />
            <PropertyColumn Property="x => x.Nationality" Title="Nationality" />
            <PropertyColumn Property="x => x.State" Title="State" />
            <PropertyColumn Property="x => x.County" Title="County" />
            <TemplateColumn Title="Details" Sortable="false">
                <CellTemplate>
                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Color="Color.Info"
                                   OnClick="@(() => ViewDetails(context.Item))" />
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>No dealers registered.</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<DealerDto> _dealers = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDealers();
    }

    private async Task LoadDealers()
    {
        _loading = true;
        try
        {
            _dealers = (await DealerService.GetAllDealersAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading dealers: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool FilterFunc(DealerDto dealer) =>
        string.IsNullOrWhiteSpace(_searchString) ||
        dealer.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        (dealer.IDNumber?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ?? false);

    private async Task OpenCreateDialog()
    {
        var dialog = await DialogService.ShowAsync<DealerDialog>("Register Dealer",
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadDealers();
    }

    private async Task ViewDetails(DealerDto dealer)
    {
        var parameters = new DialogParameters<DealerDetailsDialog> { { x => x.Dealer, dealer } };
        await DialogService.ShowAsync<DealerDetailsDialog>($"Dealer: {dealer.Name}", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
    }
}
