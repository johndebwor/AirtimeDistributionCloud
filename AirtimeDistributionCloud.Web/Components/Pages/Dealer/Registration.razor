@page "/dealer/registration"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SystemAdmin,SuperAdministrator,Dealer")]
@using AirtimeDistributionCloud.Application.DTOs
@using AirtimeDistributionCloud.Application.Services
@inject IDealerService DealerService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>@(Lang?.T("Registration_Title") ?? "Dealer Registration") - RasidBase</PageTitle>

<div class="page-header">
    <h1>@(Lang?.T("Registration_Title") ?? "Dealer Registration")</h1>
    <p>@(Lang?.T("Registration_Subtitle") ?? "Register and manage dealers")</p>
</div>

<div class="page-toolbar">
    <MudTextField @bind-Value="_searchString" Placeholder="@(Lang?.T("Registration_Search") ?? "Search dealers...")" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                  Immediate="true" Style="max-width: 300px;" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.PersonAdd"
               OnClick="OpenCreateDialog">@(Lang?.T("Registration_Register") ?? "Register Dealer")</MudButton>
</div>

<MudPaper Elevation="0" Class="data-card pa-4">
    <MudDataGrid T="DealerDto" Items="@_dealers" Filterable="false" SortMode="SortMode.Multiple"
                 Loading="@_loading" Dense="true" Hover="true" Striped="true"
                 QuickFilter="@(new Func<DealerDto, bool>(FilterFunc))">
        <Columns>
            <PropertyColumn Property="x => x.DealerNumber" Title="@(Lang?.T("Registration_DealerNum") ?? "Dealer #")" />
            <PropertyColumn Property="x => x.Name" Title="@(Lang?.T("Name") ?? "Name")" />
            <TemplateColumn Title="@(Lang?.T("Type") ?? "Type")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.Type == Core.Enums.DealerType.Person ? Color.Info : Color.Secondary)"
                             Size="Size.Small">@context.Item.Type</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Gender" Title="@(Lang?.T("Registration_Gender") ?? "Gender")" />
            <PropertyColumn Property="x => x.IDNumber" Title="@(Lang?.T("Registration_IDNumber") ?? "ID Number")" />
            <PropertyColumn Property="x => x.PhoneNumber" Title="@(Lang?.T("Phone") ?? "Phone")" />
            <PropertyColumn Property="x => x.State" Title="@(Lang?.T("Registration_State") ?? "State")" />
            <TemplateColumn Title="@(Lang?.T("Status") ?? "Status")" Sortable="false">
                <CellTemplate>
                    <MudChip T="string" Color="@(context.Item.IsActive ? Color.Success : Color.Error)"
                             Size="Size.Small">@(context.Item.IsActive ? (Lang?.T("Active") ?? "Active") : (Lang?.T("Inactive") ?? "Inactive"))</MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="@(Lang?.T("Actions") ?? "Actions")" Sortable="false">
                <CellTemplate>
                    <MudTooltip Text="@(Lang?.T("ViewDetails") ?? "View Details")">
                        <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Color="Color.Info"
                                       OnClick="@(() => ViewDetails(context.Item))" />
                    </MudTooltip>
                    <MudTooltip Text="@(Lang?.T("Edit") ?? "Edit")">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                       OnClick="@(() => OpenEditDialog(context.Item))" />
                    </MudTooltip>
                    <MudTooltip Text="@(context.Item.IsActive ? (Lang?.T("Deactivate") ?? "Deactivate") : (Lang?.T("Activate") ?? "Activate"))">
                        <MudIconButton Icon="@(context.Item.IsActive ? Icons.Material.Filled.PersonOff : Icons.Material.Filled.PersonAdd)"
                                       Size="Size.Small"
                                       Color="@(context.Item.IsActive ? Color.Error : Color.Success)"
                                       OnClick="@(() => ToggleActive(context.Item))" />
                    </MudTooltip>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>@(Lang?.T("Registration_NotFound") ?? "No dealers registered.")</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [CascadingParameter] public AirtimeDistributionCloud.Application.Services.ILanguageService? Lang { get; set; }

    private List<DealerDto> _dealers = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDealers();
    }

    private async Task LoadDealers()
    {
        _loading = true;
        try
        {
            _dealers = (await DealerService.GetAllDealersAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("ErrorLoading") ?? "Error loading dealers"}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool FilterFunc(DealerDto dealer) =>
        string.IsNullOrWhiteSpace(_searchString) ||
        dealer.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        dealer.DealerNumber.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ||
        (dealer.IDNumber?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ?? false);

    private async Task OpenCreateDialog()
    {
        var dialog = await DialogService.ShowAsync<DealerDialog>(Lang?.T("Registration_Register") ?? "Register Dealer",
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadDealers();
    }

    private async Task OpenEditDialog(DealerDto dealer)
    {
        var parameters = new DialogParameters<DealerDialog> { { x => x.EditDealer, dealer } };
        var dialog = await DialogService.ShowAsync<DealerDialog>($"{Lang?.T("Edit") ?? "Edit"}: {dealer.Name}", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
        var result = await dialog.Result;
        if (result is { Canceled: false })
            await LoadDealers();
    }

    private async Task ViewDetails(DealerDto dealer)
    {
        var parameters = new DialogParameters<DealerDetailsDialog> { { x => x.Dealer, dealer } };
        await DialogService.ShowAsync<DealerDetailsDialog>($"{Lang?.T("Dealer") ?? "Dealer"}: {dealer.Name}", parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });
    }

    private async Task ToggleActive(DealerDto dealer)
    {
        var newState = !dealer.IsActive;
        var action = newState ? (Lang?.T("Activate") ?? "activate") : (Lang?.T("Deactivate") ?? "deactivate");
        try
        {
            await DealerService.SetDealerActiveAsync(dealer.Id, newState);
            Snackbar.Add(newState
                ? (Lang?.T("Registration_Activated") ?? "Dealer activated successfully")
                : (Lang?.T("Registration_Deactivated") ?? "Dealer deactivated successfully"), Severity.Success);
            await LoadDealers();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Lang?.T("Error") ?? "Error"}: {ex.Message}", Severity.Error);
        }
    }
}
